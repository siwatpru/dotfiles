#Change Window 
alt - h : yabai -m window --focus west || yabai -m display --focus west
alt - j : yabai -m window --focus south || yabai -m display --focus south
alt - k : yabai -m window --focus north || yabai -m display --focus north
alt - l : yabai -m window --focus east || yabai -m display --focus east

# Modifying the layout
shift + alt - r : yabai -m space --rotate 270
shift + alt - y : yabai -m space --mirror y-axis
shift + alt - x : yabai -m space --mirror x-axis
shift + alt - f : yabai -m window --toggle float

# Change focus between external displays
alt - w: yabai -m display --focus north
alt - s: yabai -m display --focus south

# Move window to external displays
# shift + alt - w: yabai -m display --warp north
# shift + alt - s: yabai -m display --warp south

# Modifying the window size
shift + alt - m : yabai -m window --toggle zoom-fullscreen
shift + alt - e : yabai -m space --balance

# Moving windows around
ctrl + shift - h : yabai -m window --swap west || $(yabai -m window --display west; yabai -m display --focus west)
ctrl + shift - j : yabai -m window --swap south || $(yabai -m window --display south; yabai -m display --focus south)
ctrl + shift - k : yabai -m window --swap north || $(yabai -m window --display north; yabai -m display --focus north)
ctrl + shift - l : yabai -m window --swap east || $(yabai -m window --display east; yabai -m display --focus east)

# Move widow to prev and next space
shift + alt - p : yabai -m window --space prev
shift + alt - n : yabai -m window --space next

# move window to space #
ctrl + alt - 1 : yabai -m window --space 1
ctrl + alt - 2 : yabai -m window --space 2
ctrl + alt - 3 : yabai -m window --space 3
ctrl + alt - 4 : yabai -m window --space 4
ctrl + alt - 5 : yabai -m window --space 5
ctrl + alt - 6 : yabai -m window --space 6
ctrl + alt - 7 : yabai -m window --space 7

shift + alt - 1 : yabai -m space --focus 1
shift + alt - 2 : yabai -m space --focus 2
shift + alt - 3 : yabai -m space --focus 3
shift + alt - 4 : yabai -m space --focus 4
shift + alt - 5 : yabai -m space --focus 5
shift + alt - 6 : yabai -m space --focus 6
shift + alt - 7 : yabai -m space --focus 7

# Create and destroy spaces
shift + alt - c : yabai -m space --create
shift + alt - d : yabai -m space --destroy
